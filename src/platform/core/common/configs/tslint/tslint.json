{
  "extends": ["tslint:recommended", "tslint-sonarts", "tslint-angular"],
  "rules": {
    "ordered-imports": {
      "options": {
        "import-sources-order": "any",
        "module-source-path": "full",
        "named-imports-order": "any"
      }
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "max-line-length": [true, 120],
    "member-ordering": {
      "options": {
        "order": [
          "private-static-field",
          "protected-static-field",
          "public-static-field",
          "private-instance-field",
          "protected-instance-field",
          "public-instance-field",
          "constructor",
          "public-static-method",
          "protected-static-method",
          "private-static-method",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    },
    "new-parens": true,
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "assert",
      "count",
      "debug",
      "dir",
      "dirxml",
      "error",
      "group",
      "groupCollapsed",
      "groupEnd",
      "info",
      "log",
      "profile",
      "profileEnd",
      "table",
      "time",
      "timeEnd",
      "timeStamp",
      "trace",
      "warn"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-default-export": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-empty-interface": false,
    "no-eval": true,
    "no-inferrable-types": [false, "ignore-params", "ignore-properties"],
    "no-internal-module": true,
    "no-invalid-this": true,
    "no-magic-numbers": false,
    "no-namespace": true,
    "no-null-keyword": true,
    "no-require-imports": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "switch-default": true,
    "trailing-comma": {
      "options": {
        "esSpecCompliant": true,
        "multiline": "always",
        "singleline": "never"
      }
    },
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "variable-name": { "options": ["ban-keywords", "check-format", "allow-leading-underscore"] },
    "object-literal-key-quotes": [true, "consistent"],
    "ban-types": {
      "options": [
        ["Object", "Avoid using the `Object` type. Did you mean `object`?"],
        ["Function", "Avoid using the `Function` type. Prefer a specific function type, like `() => void`."],
        ["Boolean", "Avoid using the `Boolean` type. Did you mean `boolean`?"],
        ["Number", "Avoid using the `Number` type. Did you mean `number`?"],
        ["String", "Avoid using the `String` type. Did you mean `string`?"],
        ["Symbol", "Avoid using the `Symbol` type. Did you mean `symbol`?"]
      ]
    },
    "no-duplicate-string": [true, 5],
    "array-type": [true, "array"],
    "only-arrow-functions": false,
    "prefer-for-of": true,
    "no-big-function": [true, 100],
    "cognitive-complexity": [true, 25],
    "space-before-function-paren": [true, { "anonymous": "always", "named": "never", "asyncArrow": "always" }],
    "no-collapsible-if": true,
    "no-hardcoded-credentials": [true, "password", "secret", "token"],
    "max-union-size": [true, 2],
    "no-non-null-assertion": true,
    "deprecation": false,
    "no-angle-bracket-type-assertion": false,

    "max-classes-per-file": false,
    "no-floating-promises": false,
    "no-big-function": false,
    "no-duplicate-string": false,
    "no-identical-functions": false,
    "max-union-size": false,
    "no-hardcoded-credentials": false,
    "cognitive-complexity": false,
    "no-inputs-metadata-property": false,
    "use-type-alias": false
  }
}
