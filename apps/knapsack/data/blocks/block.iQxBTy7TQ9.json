  "data": {
    "guidelines": [
      {
        "id": "Wy6iR9LR1T",
        "type": "do",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Use clear and concise labels that directly communicate the action (e.g., “Submit” or “Delete”).",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Highlight the primary action with a visually distinct button to establish clear priority.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Ensure buttons are properly spaced and sized for easy interaction, especially on mobile.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": "SE7rcWhd7R",
        "type": "dont",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Don’t place destructive buttons too close to primary ones without clear separation to avoid accidental clicks.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Don’t rely solely on color to differentiate buttons; use outlines, icons, or other visual cues for accessibility.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Don’t overload interfaces with too many buttons, as this overwhelms users and complicates decision-making.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
