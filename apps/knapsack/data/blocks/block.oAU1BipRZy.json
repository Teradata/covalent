              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Use checkbox icons for mutually exclusive choices—use ",
                          "type": "text"
                        },
                        {
                          "text": "radio icons",
                          "type": "text",
                          "marks": [
                            {
                              "type": "link",
                              "attrs": {
                                "rel": "noopener noreferrer nofollow",
                                "href": "/pattern/icon-radio",
                                "class": null
                              }
                            }
                          ]
                        },
                        {
                          "text": " instead",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Overuse checkbox icons for secondary or non-critical options.",
                          "type": "text",
                          "marks": [
                            {
                              "type": "bold"
                            }
                          ]
                        },
                        {
                          "text": " This can overwhelm users and make forms feel cluttered.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Leave checkbox icons unchecked without a clear indication of their current state.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
