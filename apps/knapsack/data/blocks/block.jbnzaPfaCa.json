    "guidelines": [
      {
        "id": "bomWijJz27",
        "type": "do",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Ensure that text fields have clear and descriptive labels that indicate what information is required. ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Provide input constraints (e.g., max-length, patterns) where necessary to guide user input.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Include helper or placeholder text sparingly, as it should not be used as a substitute for labels.",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Use proper text field widths, ensuring they are large enough to accommodate typical input. ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "If applicable, provide inline validation messages to guide users as they fill out the form. ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      },
      {
        "id": "bRJqa89NJE",
        "type": "dont",
        "content": {
          "type": "doc",
          "content": [
            {
              "type": "bulletList",
              "content": [
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Overuse text fields for all inputs—use the appropriate input type for different data (e.g., use ",
                          "type": "text"
                        },
                        {
                          "text": "email",
                          "type": "text",
                          "marks": [
                            {
                              "type": "bold"
                            }
                          ]
                        },
                        {
                          "text": " for email address). ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Use text fields without labels—always provide a label for accessibility and clarity. ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "listItem",
                  "content": [
                    {
                      "type": "paragraph",
                      "content": [
                        {
                          "text": "Allow unbounded, unvalidated user input in critical fields (e.g., email addresses or phone numbers). ",
                          "type": "text"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
