{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "",
  "type": "object",
  "required": [],
  "properties": {
    "icon": {
      "type": "string",
      "default": "info",
      "description": "Icon added to the alert"
    },
    "state": {
      "description": "State representation which can take the values:\nactive|negative|positive|caution",
      "type": "string",
      "enum": ["active", "negative", "positive", "caution"]
    },
    "inline": {
      "type": "boolean",
      "description": "Displays the alert inline with its container"
    },
    "titleText": {
      "type": "string",
      "default": "Alert title",
      "description": "Title of the alert"
    },
    "iconAriaLabel": {
      "type": "string",
      "default": "aria-label for the icon",
      "description": "aria-label for the icon"
    },
    "descriptionText": {
      "type": "string",
      "default": "Alert description",
      "description": "Description of the alert"
    }
  }
}
