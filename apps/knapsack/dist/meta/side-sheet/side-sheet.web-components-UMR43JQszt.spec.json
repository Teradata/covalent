{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "",
  "type": "object",
  "required": ["open"],
  "properties": {
    "heading": {
      "type": "string",
      "default": "Sample side sheet",
      "description": "Heading of the side sheet."
    },
    "open": {
      "type": "boolean",
      "default": true,
      "description": "Opens the side sheet"
    },
    "pushed": {
      "type": "boolean",
      "description": "When true occupies the entire viewport width."
    },
    "noPadding": {
      "type": "boolean",
      "description": "Removes the padding in the side sheet"
    }
  }
}
